<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Your Digital Wallet - Rewards Maximizer</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    <style>
      .generic-card-icon { font-size: 3em; color: white; display: flex;
      justify-content: center; align-items: center; height: 100px;
      border-radius: 8px; } .bg-chase { background-color: #0074cc; } .bg-amazon
      { background-color: #ff9900; } .bg-sapphire { background-color: #0a4e90; }
    </style>
  </head>

  <body class="bg-light d-flex flex-column min-vh-100">

  {{!-- Header --}}
    <header class="header bg-dark text-white py-3">
        <div class="container d-flex justify-content-between align-items-center">
            <h1 class="header-logo">Rewards Maximizer <i class="fas fa-credit-card card-icon"></i></h1>
            <nav class="navbar-links">
          <button
            type="button"
            {{on "click" this.home}}
            class="text-btn"
          >Home</button>
          <button
            type="button"
            {{on "click" this.search}}
            class="text-btn"
          >Search</button>
          <button 
            type="button" 
            {{on "click" this.profile}}
            class="text-btn">
            Profile</button>
          <button
            type="button"
            {{on "click" this.crowdsourcing}}
            class="navbar-button"
          >User Feedback</button>
        </nav>
      </div>
    </header>

{{!-- Main Content --}}
    <div class="container my-4">
      <h2 class="text-center">Your Digital Wallet</h2>
      <div class="row mt-4">
        {{#each @model as |card|}}
          <div class="col-md-4 mb-4">
            <LinkTo
              @route="card-details"
              @model={{card}}
              class="text-decoration-none"
            >
              <div class="card shadow-sm text-center">
                <div class="generic-card-icon {{card.bgColorClass}}">
                  <i class="{{card.iconClass}}"></i>
                </div>
                <div class="card-body">
                  <h5 class="card-title">{{card.cardName}}</h5>
                  <p class="card-text"><strong
                    >{{card.cardBenefits}}</strong></p>
                </div>
              </div>
            </LinkTo>
          </div>
        {{/each}}
      </div>
      <button
        class="btn btn-dark mt-3 w-100"
        data-bs-toggle="modal"
        data-bs-target="#addCardModal"
        type="button"
      >Add New Card</button>
    </div>

    {{!-- Modal for Adding a New Card --}}
    <div
      class="modal fade"
      id="addCardModal"
      tabindex="-1"
      aria-labelledby="addCardModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="addCardModalLabel">Add New Card</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <form id="addCardForm">
              <div class="mb-3">
                <label for="cardName" class="form-label">Card Name</label>
                <input
                  type="text"
                  class="form-control"
                  id="cardName"
                  required
                />
              </div>
              <div class="mb-3">
                <label for="cardBenefits" class="form-label">Card Benefits</label>
                <input
                  type="text"
                  class="form-control"
                  id="cardBenefits"
                  required
                />
              </div>
              <div class="mb-3">
                <label for="iconChoice" class="form-label">Icon Choice</label>
                <select id="iconChoice" class="form-select">
                  <option value="fa-credit-card">Credit Card</option>
                  <option value="fa-shopping-cart">Shopping</option>
                  <option value="fa-plane">Travel</option>
                  <option value="fa-utensils">Dining</option>
                </select>
              </div>
              <div class="mb-3">
                <label for="cardColor" class="form-label">Card Color</label>
                <input
                  type="color"
                  class="form-control form-control-color"
                  id="cardColor"
                  value="#000000"
                  required
                />
              </div>
              <button type="submit" class="btn btn-primary w-100">Add Card</button>
            </form>
          </div>
        </div>
      </div>
    </div>

    {{!-- Footer --}}
    <footer class="footer bg-dark text-white py-3 mt-auto">
        <h5 class="footer-logo">Rewards Maximizer <i class="fas fa-credit-card card-icon"></i></h5>
        <div class="social-icons">
            <a href="#"><i class="fab fa-twitter"></i></a>
            <a href="#"><i class="fab fa-instagram"></i></a>
            <a href="#"><i class="fab fa-youtube"></i></a>
            <a href="#"><i class="fab fa-linkedin"></i></a>
        </div>
        <div class="footer-links">
            <a href="#">Contact Us</a> | <a href="#">About Us</a>
        </div>
    </footer>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    ></script>
  </body>
</html>