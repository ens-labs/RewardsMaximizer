<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{this.model.cardName}} - Rewards Maximizer</title>

    {{!-- Include Bootstrap CSS --}}
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&display=swap"
      rel="stylesheet"
    />
    {{!-- Include Font Awesome for the stars --}}
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
    />

    <style>
      .generic-card-icon { font-size: 3em; color: white; display: flex;
      justify-content: center; align-items: center; height: 100px;
      border-radius: 8px; } .bg-chase { background-color: #0074cc; } .bg-amazon
      { background-color: #ff9900; } .bg-sapphire { background-color: #0a4e90; }
      /* Styling for the stars */ .star { font-size: 3rem; color: #d3d3d3; /*
      Light gray for inactive stars */ cursor: pointer; margin: 0 5px; /* Space
      out the stars */ } .star.active { color: #f39c12; /* Gold for active stars
      */ }
    </style>
  </head>

  <body class="bg-light d-flex flex-column min-vh-100">
    {{!-- Header --}}
    <header class="header bg-dark text-white py-3">
        <div class="container d-flex justify-content-between align-items-center">
            <h1 class="header-logo">Rewards Maximizer <i class="fas fa-credit-card card-icon"></i></h1>
            <nav class="navbar-links">
                <button type="button" {{on "click" this.home}} class="text-btn">Home</button>
                <button type="button" {{on "click" this.search}} class="text-btn">Search</button>
                <button type="button" {{on "click" this.profile}} class="text-btn">Profile</button>
                <button type="button" {{on "click" this.crowdsourcing}} class="navbar-button">User Feedback</button>
            </nav>
        </div>
    </header>

    {{!-- Card Icon Section --}}
    <div class="d-flex justify-content-center mt-4">
      <div
        class="generic-card-icon {{this.model.iconClass}} bg-chase"
        style="font-size: 5em; height: 150px; width: 150px; border-radius: 8px; color: white; display: flex; justify-content: center; align-items: center;"
      >
      </div>
    </div>

    {{!-- Main Content --}}
    <div class="container my-4">
      <h2 class="text-center">{{this.model.cardName}}</h2>
      <div class="text-center">
        <p><strong>Benefits:</strong> {{this.model.cardBenefits}}</p>
      </div>

      {{!-- Star Rating Section (Static for now) --}}
      <div class="d-flex justify-content-center mt-4">
        <i class="star fas fa-star" id="star1"></i>
        <i class="star fas fa-star" id="star2"></i>
        <i class="star fas fa-star" id="star3"></i>
        <i class="star fas fa-star" id="star4"></i>
        <i class="star fas fa-star" id="star5"></i>
      </div>

      {{!-- Display the rating --}}
      <div class="text-center mt-3">
        <p>Your Rating: <span>{{this.rating}}</span></p>
      </div>

      {{!-- Back to Wallet Button --}}
      <div class="text-center mt-4">
        <LinkTo @route="wallet" class="btn btn-dark">Back to Wallet</LinkTo>
      </div>
    </div>

    {{!-- Footer --}}
    <footer class="footer bg-dark text-white py-3 mt-auto">
        <h5 class="footer-logo">Rewards Maximizer <i class="fas fa-credit-card card-icon"></i></h5>
        <div class="social-icons">
            <a href="#"><i class="fab fa-twitter"></i></a>
            <a href="#"><i class="fab fa-instagram"></i></a>
            <a href="#"><i class="fab fa-youtube"></i></a>
            <a href="#"><i class="fab fa-linkedin"></i></a>
        </div>
        <div class="footer-links">
            <a href="#">Contact Us</a> | <a href="#">About Us</a>
        </div>
    </footer>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    ></script>
  </body>
</html>