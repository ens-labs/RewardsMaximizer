<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{this.model.cardName}} - Rewards Maximizer</title>

    <!-- Include Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <!-- Include Font Awesome for the stars -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
    />

    <style>
      /* Styling for the stars */ .star { font-size: 3rem; color: #d3d3d3; /*
      Light gray for inactive stars */ cursor: pointer; margin: 0 5px; /* Space
      out the stars */ } .star.active { color: #f39c12; /* Gold for active stars
      */ }
    </style>
  </head>

  <body class="bg-light d-flex flex-column min-vh-100">
    <!-- Header -->
    <header class="header bg-dark text-white py-3">
      <div class="container d-flex justify-content-between align-items-center">
        <h1 class="header-logo">Rewards Maximizer</h1>
        <nav class="navbar-links">
          <button
            type="button"
            {{on "click" this.home}}
            class="text-btn"
          >Home</button>
          <button
            type="button"
            {{on "click" this.search}}
            class="text-btn"
          >Search</button>
          <button type="button" class="text-btn">Profile</button>
          <button
            type="button"
            {{on "click" this.crowdsourcing}}
            class="navbar-button"
          >User Feedback</button>
        </nav>
      </div>
    </header>

    <!-- Main Content -->
    <div class="container my-4">
      <h2 class="text-center">{{this.model.cardName}}</h2>
      <div class="text-center">
        <p><strong>Benefits:</strong> {{this.model.cardBenefits}}</p>
      </div>

      <!-- Star Rating Section (Static for now) -->
      <div class="d-flex justify-content-center mt-4">
        <i class="star fas fa-star" id="star1"></i>
        <i class="star fas fa-star" id="star2"></i>
        <i class="star fas fa-star" id="star3"></i>
        <i class="star fas fa-star" id="star4"></i>
        <i class="star fas fa-star" id="star5"></i>
      </div>

      <!-- Back to Wallet Button -->
      <div class="text-center mt-4">
        <LinkTo @route="wallet" class="btn btn-dark">Back to Wallet</LinkTo>
      </div>
    </div>

    <!-- Modal for Star Rating -->
    <div
      class="modal fade"
      id="starRatingModal"
      tabindex="-1"
      aria-labelledby="starRatingModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="starRatingModalLabel">Rate the Card</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <div class="d-flex justify-content-center">
              <!-- Dynamic star rendering with classes applied based on rating -->
              <i
                class="star fas fa-star"
                data-star="1"
                {{on "click" this.setActiveStar}}
                id="star1"
              ></i>
              <i
                class="star fas fa-star"
                data-star="2"
                {{on "click" this.setActiveStar}}
                id="star2"
              ></i>
              <i
                class="star fas fa-star"
                data-star="3"
                {{on "click" this.setActiveStar}}
                id="star3"
              ></i>
              <i
                class="star fas fa-star"
                data-star="4"
                {{on "click" this.setActiveStar}}
                id="star4"
              ></i>
              <i
                class="star fas fa-star"
                data-star="5"
                {{on "click" this.setActiveStar}}
                id="star5"
              ></i>
            </div>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >Close</button>
            <button
              type="button"
              class="btn btn-primary"
              data-bs-dismiss="modal"
            >Done</button>
          </div>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <footer class="footer bg-dark text-white py-3 mt-auto">
      <div class="container text-center">
        <h5
          class="footer-logo"
          style="font-family: 'Playfair Display', serif;"
        >Rewards Maximizer</h5>
        <div class="d-flex justify-content-center my-2">
          <a href="#" class="mx-2 text-white"><i class="fab fa-twitter"></i></a>
          <a href="#" class="mx-2 text-white"><i
              class="fab fa-instagram"
            ></i></a>
          <a href="#" class="mx-2 text-white"><i class="fab fa-youtube"></i></a>
          <a href="#" class="mx-2 text-white"><i
              class="fab fa-linkedin"
            ></i></a>
        </div>
      </div>
    </footer>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    ></script>
  </body>
</html>