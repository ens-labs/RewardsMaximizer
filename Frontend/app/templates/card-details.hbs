<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{@model.cardName}} - Rewards Maximizer</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    <style>
      /* Generic Card Icon Styling */ .generic-card-icon { font-size: 3em;
      color: white; display: flex; justify-content: center; align-items: center;
      height: 100px; border-radius: 8px; } /* Different Colors for Different
      Cards */ .bg-chase { background-color: #0074cc; } .bg-amazon {
      background-color: #ff9900; } .bg-sapphire { background-color: #0a4e90; }
    </style>
  </head>

  <body class="bg-light d-flex flex-column min-vh-100">
    <!-- Header -->
    <header class="header bg-dark text-white py-3">
      <div class="container d-flex justify-content-between align-items-center">
        <h1 class="header-logo">Rewards Maximizer</h1>
        <nav class="navbar-links">
          <button
            type="button"
            {{on "click" this.home}}
            class="text-btn"
          >Home</button>
          <button
            type="button"
            {{on "click" this.search}}
            class="text-btn"
          >Search</button>
          <button type="button" class="text-btn">Profile</button>
          <button
            type="button"
            {{on "click" this.crowdsourcing}}
            class="navbar-button"
          >User Feedback</button>
        </nav>
      </div>
    </header>

    <!-- Main Content -->
    <div class="container my-4">
      <h2 class="text-center">{{@model.cardName}}</h2>
      <div class="text-center">
        <p><strong>Benefits:</strong> {{@model.cardBenefits}}</p>
      </div>

      <!-- Back to Wallet Button -->
      <div class="text-center mt-4">
        <LinkTo @route="wallet" class="btn btn-dark">Back to Wallet</LinkTo>
      </div>
    </div>

    <!-- Footer -->
    <footer class="footer bg-dark text-white py-3 mt-auto">
      <div class="container text-center">
        <h5
          class="footer-logo"
          style="font-family: 'Playfair Display', serif;"
        >Rewards Maximizer</h5>
        <div class="d-flex justify-content-center my-2">
          <a href="#" class="mx-2 text-white"><i class="fab fa-twitter"></i></a>
          <a href="#" class="mx-2 text-white"><i
              class="fab fa-instagram"
            ></i></a>
          <a href="#" class="mx-2 text-white"><i class="fab fa-youtube"></i></a>
          <a href="#" class="mx-2 text-white"><i
              class="fab fa-linkedin"
            ></i></a>
        </div>
      </div>
    </footer>
  </body>
</html>